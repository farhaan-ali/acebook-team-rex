<h2> login </h2>

<%= form_tag '/login' do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag 'Log in', :class => "button" %>
  <p style="color:red;"> <%= flash[:invalid_email] %> <%= flash[:invalid_password] %> </p>

<%end%>
