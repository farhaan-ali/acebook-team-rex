<div id="login_page">
<h2> login </h2>


<%= form_tag '/login' do %>
  <%= label_tag :email %>
  <br>
  <%= text_field_tag :email %>
  <br>
  <br>
  <%= label_tag :password %>
  <br>
  <%= password_field_tag :password %>
  <br>
  <br>
  <%= submit_tag 'log in', :class => "button" %>
  <p style="color:red;"> <%= flash[:invalid_email] %> <%= flash[:invalid_password] %> </p>
<%end%>
</div>